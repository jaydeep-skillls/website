---
import Base from '../../layouts/Base.astro';
const { frontmatter } = Astro.props;
---
<Base title={`${frontmatter.title} — Weekly Log`}>
  <style>
    .back {
      font-size: 12px;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      color: var(--ink-light);
      margin-bottom: 2rem;
      display: inline-block;
    }

    .back:hover { color: var(--accent); text-decoration: none; }

    .post-header {
      margin-bottom: 2.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid var(--border);
    }

    .date {
      font-size: 11px;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--accent);
      margin-bottom: 0.75rem;
    }

    h1 {
      font-family: 'Instrument Serif', serif;
      font-size: 2rem;
      font-weight: 400;
      line-height: 1.25;
      margin-bottom: 0.5rem;
    }

    .excerpt {
      color: var(--ink-light);
      font-size: 13px;
    }

    /* Sections */
    .post-body :global(h2) {
      font-family: 'Instrument Serif', serif;
      font-size: 1.3rem;
      font-weight: 400;
      margin: 2.5rem 0 1rem;
      padding-top: 1.5rem;
      border-top: 1px solid var(--border);
      color: var(--ink);
    }

    .post-body :global(p) {
      margin-bottom: 1rem;
      font-size: 14px;
      color: var(--ink);
    }

    .post-body :global(ul), .post-body :global(ol) {
      padding-left: 1.5rem;
      margin-bottom: 1rem;
    }

    .post-body :global(li) {
      margin-bottom: 0.4rem;
      font-size: 14px;
    }

    .post-body :global(a) { color: var(--accent); }

    .post-body :global(code) {
      background: var(--card);
      border: 1px solid var(--border);
      padding: 0.1rem 0.4rem;
      font-size: 12px;
    }

    .post-body :global(blockquote) {
      border-left: 2px solid var(--accent);
      padding-left: 1rem;
      color: var(--ink-light);
      font-style: italic;
      margin: 1rem 0;
    }
  </style>

  <a class="back" href="/">← Back</a>

  <div class="post-header">
    <div class="date">{new Date(frontmatter.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
    <h1>{frontmatter.title}</h1>
    {frontmatter.excerpt && <p class="excerpt">{frontmatter.excerpt}</p>}
  </div>

  <div class="post-body">
    <slot />
  </div>
</Base>
