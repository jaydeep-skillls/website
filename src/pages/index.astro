---
import Base from '../layouts/Base.astro';

const posts = await Astro.glob('./posts/*.md');
const sorted = posts.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
const latest = sorted[0];
const older = sorted.slice(1);
---
<Base title="Jaydeep Kakadiya">
  <style>
    .intro {
      margin-bottom: 1.75rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid var(--border);
    }

    .intro h1 {
      font-family: 'Nunito', sans-serif;
      font-size: 1.6rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .bio {
      font-size: 14px;
      color: var(--ink);
      line-height: 1.7;
    }

    .bio a { color: var(--accent); }

    .section-label {
      font-size: 11px;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--accent);
      margin-bottom: 0.75rem;
      margin-top: 1.75rem;
    }

    .post-card {
      background: var(--card);
      border: 1px solid var(--border);
      padding: 1.25rem 1.5rem;
      margin-bottom: 0.75rem;
      transition: border-color 0.2s;
    }

    .post-card:hover { border-color: var(--accent); }

    .post-card .date {
      font-size: 11px;
      letter-spacing: 0.06em;
      color: var(--ink-light);
      text-transform: uppercase;
      margin-bottom: 0.35rem;
    }

    .post-card h2 {
      font-family: 'Nunito', sans-serif;
      font-size: 1.1rem;
      font-weight: 700;
      margin-bottom: 0.4rem;
    }

    .post-card h2 a { color: var(--ink); }
    .post-card h2 a:hover { color: var(--accent); text-decoration: none; }

    .post-card .excerpt {
      color: var(--ink-light);
      font-size: 13px;
      margin-bottom: 0.75rem;
    }

    .tags {
      display: flex;
      gap: 0.4rem;
      flex-wrap: wrap;
    }

    .tag {
      font-size: 11px;
      padding: 0.15rem 0.5rem;
      border: 1px solid var(--border);
      color: var(--ink-light);
    }

    .older-list { list-style: none; margin-top: 0.5rem; }

    .older-list li {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      padding: 0.5rem 0;
      border-bottom: 1px solid var(--border);
      gap: 1rem;
    }

    .older-list li a { color: var(--ink); font-size: 13px; }
    .older-list li a:hover { color: var(--accent); }
    .older-list li .date { color: var(--ink-light); font-size: 11px; white-space: nowrap; }

    .empty {
      color: var(--ink-light);
      font-style: italic;
      font-size: 13px;
    }
  </style>

  <div class="intro">
    <h1>Jaydeep Kakadiya</h1>
    <p class="bio">
      Controls & robotics engineer at Timetooth Technologies. I work on electromechanical systems â€” wearable robotics, automation platforms, and assistive devices. Background in system dynamics, real-time control, and hardware integration. IIT Gandhinagar grad.
      <a href="/work">Full profile â†’</a>
    </p>
  </div>

  <div class="section-label">Weekly Log</div>
  <p style="font-size: 13px; color: var(--ink-light); margin-bottom: 1rem;">What I built, read, and did â€” every week.</p>

  {latest ? (
    <>
      <div class="post-card">
        <div class="date">{new Date(latest.frontmatter.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
        <h2><a href={latest.url}>{latest.frontmatter.title}</a></h2>
        {latest.frontmatter.excerpt && <p class="excerpt">{latest.frontmatter.excerpt}</p>}
        <div class="tags">
          {latest.frontmatter.built && <span class="tag">ðŸ”¨ Built</span>}
          {latest.frontmatter.read && <span class="tag">ðŸ“– Read</span>}
          {latest.frontmatter.did && <span class="tag">âœ¦ Did</span>}
        </div>
      </div>
    </>
  ) : (
    <p class="empty">No posts yet â€” write your first weekly entry in <code>src/pages/posts/</code>.</p>
  )}

  {older.length > 0 && (
    <>
      <div class="section-label" style="margin-top: 1.5rem;">Previous Entries</div>
      <ul class="older-list">
        {older.map(post => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
            <span class="date">{new Date(post.frontmatter.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
          </li>
        ))}
      </ul>
    </>
  )}
</Base>
