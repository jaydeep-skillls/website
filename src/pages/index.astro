---
import Base from '../layouts/Base.astro';

// Get all posts sorted by date
const posts = await Astro.glob('./posts/*.md');
const sorted = posts.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
const latest = sorted[0];
const older = sorted.slice(1);
---
<Base title="Weekly Log">
  <style>
    .intro {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--border);
    }

    .intro p {
      color: var(--ink-light);
      font-size: 13px;
      margin-top: 0.5rem;
    }

    .intro h1 {
      font-family: 'Instrument Serif', serif;
      font-size: 2.2rem;
      font-weight: 400;
      line-height: 1.2;
    }

    .latest-label {
      font-size: 11px;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--accent);
      margin-bottom: 0.75rem;
    }

    .post-card {
      background: var(--card);
      border: 1px solid var(--border);
      padding: 2rem;
      margin-bottom: 1rem;
      transition: border-color 0.2s;
    }

    .post-card:hover { border-color: var(--accent); }

    .post-card .date {
      font-size: 11px;
      letter-spacing: 0.08em;
      color: var(--ink-light);
      text-transform: uppercase;
      margin-bottom: 0.5rem;
    }

    .post-card h2 {
      font-family: 'Instrument Serif', serif;
      font-size: 1.5rem;
      font-weight: 400;
      margin-bottom: 0.75rem;
    }

    .post-card h2 a { color: var(--ink); }
    .post-card h2 a:hover { color: var(--accent); text-decoration: none; }

    .post-card .excerpt {
      color: var(--ink-light);
      font-size: 13px;
      margin-bottom: 1rem;
    }

    .tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .tag {
      font-size: 11px;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      padding: 0.2rem 0.6rem;
      border: 1px solid var(--border);
      color: var(--ink-light);
    }

    .older-title {
      font-size: 11px;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--ink-light);
      margin: 2rem 0 1rem;
    }

    .older-list { list-style: none; }

    .older-list li {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      padding: 0.6rem 0;
      border-bottom: 1px solid var(--border);
      gap: 1rem;
    }

    .older-list li a { color: var(--ink); font-size: 13px; }
    .older-list li a:hover { color: var(--accent); }
    .older-list li .date { color: var(--ink-light); font-size: 11px; white-space: nowrap; }

    .empty {
      color: var(--ink-light);
      font-style: italic;
      font-size: 13px;
    }
  </style>

  <div class="intro">
    <h1>What I'm up to,<br /><em>week by week.</em></h1>
    <p>A personal log of what I built, what I read, and what I did.</p>
  </div>

  {latest ? (
    <>
      <div class="latest-label">Latest Entry</div>
      <div class="post-card">
        <div class="date">{new Date(latest.frontmatter.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
        <h2><a href={latest.url}>{latest.frontmatter.title}</a></h2>
        {latest.frontmatter.excerpt && <p class="excerpt">{latest.frontmatter.excerpt}</p>}
        <div class="tags">
          {latest.frontmatter.built && <span class="tag">ðŸ”¨ Built</span>}
          {latest.frontmatter.read && <span class="tag">ðŸ“– Read</span>}
          {latest.frontmatter.did && <span class="tag">âœ¦ Did</span>}
        </div>
      </div>
    </>
  ) : (
    <p class="empty">No posts yet â€” write your first weekly entry in <code>src/pages/posts/</code>.</p>
  )}

  {older.length > 0 && (
    <>
      <div class="older-title">Previous Entries</div>
      <ul class="older-list">
        {older.map(post => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
            <span class="date">{new Date(post.frontmatter.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
          </li>
        ))}
      </ul>
    </>
  )}
</Base>
